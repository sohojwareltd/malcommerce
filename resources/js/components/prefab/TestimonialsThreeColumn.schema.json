{
  "sectionName": "TestimonialsThreeColumn",
  "sectionPurpose": "Responsive testimonials/reviews grid displaying social media-style recommendation cards. Desktop: 3 columns, Tablet: 2 columns, Mobile: 1 column. Supports unlimited number of testimonials.",
  
  "contentSchema": {
    "testimonials": {
      "type": "array",
      "label": "Testimonials",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "profileImage": {
            "type": "url",
            "label": "Profile Image URL",
            "required": false
          },
          "name": {
            "type": "string",
            "label": "Name",
            "required": true
          },
          "recommendsName": {
            "type": "string",
            "label": "Recommends Name",
            "required": false,
            "description": "Name of the person/company being recommended"
          },
          "date": {
            "type": "string",
            "label": "Date",
            "required": false,
            "description": "Date of the recommendation (e.g., 'Dec 13, 2024' or '2h')"
          },
          "reviewText": {
            "type": "string",
            "label": "Review Text",
            "required": true
          },
          "likes": {
            "type": "number",
            "label": "Likes Count",
            "required": false
          },
          "comments": {
            "type": "number",
            "label": "Comments Count",
            "required": false
          }
        }
      },
      "default": []
    }
  },
  
  "styleOptions": {
    "backgroundColor": {
      "type": "color",
      "label": "Section Background Color",
      "default": "#ffffff"
    },
    "cardBackgroundColor": {
      "type": "color",
      "label": "Card Background Color",
      "default": "#ffffff"
    },
    "cardBorderColor": {
      "type": "color",
      "label": "Card Border Color",
      "default": "#fbbf24"
    },
    "cardBorderWidth": {
      "type": "text",
      "label": "Card Border Width",
      "default": "1px"
    },
    "cardBorderRadius": {
      "type": "select",
      "label": "Card Border Radius",
      "options": ["none", "sm", "md", "lg", "xl"],
      "default": "md"
    },
    "nameSize": {
      "type": "select",
      "label": "Name Size",
      "options": ["sm", "base", "lg", "xl"],
      "default": "base"
    },
    "nameColor": {
      "type": "color",
      "label": "Name Color",
      "default": "#1f2937"
    },
    "nameWeight": {
      "type": "select",
      "label": "Name Font Weight",
      "options": ["normal", "semibold", "bold"],
      "default": "semibold"
    },
    "reviewTextSize": {
      "type": "select",
      "label": "Review Text Size",
      "options": ["xs", "sm", "base", "lg"],
      "default": "sm"
    },
    "reviewTextColor": {
      "type": "color",
      "label": "Review Text Color",
      "default": "#374151"
    },
    "reviewTextLineHeight": {
      "type": "select",
      "label": "Review Text Line Height",
      "options": ["normal", "relaxed", "loose"],
      "default": "relaxed"
    },
    "dateSize": {
      "type": "select",
      "label": "Date Size",
      "options": ["xs", "sm"],
      "default": "xs"
    },
    "dateColor": {
      "type": "color",
      "label": "Date Color",
      "default": "#6b7280"
    },
    "recommendsTextColor": {
      "type": "color",
      "label": "Recommends Text Color",
      "default": "#6b7280"
    },
    "recommendsTextSize": {
      "type": "select",
      "label": "Recommends Text Size",
      "options": ["xs", "sm", "base"],
      "default": "sm"
    },
    "spacing": {
      "type": "select",
      "label": "Grid Spacing",
      "options": ["normal", "large"],
      "default": "normal"
    },
    "cardPadding": {
      "type": "select",
      "label": "Card Padding",
      "options": ["normal", "large"],
      "default": "normal"
    },
    "profileImageSize": {
      "type": "select",
      "label": "Profile Image Size",
      "options": ["small", "medium", "large"],
      "default": "medium",
      "description": "small: 40px, medium: 48px, large: 64px"
    },
    "profileImageShape": {
      "type": "select",
      "label": "Profile Image Shape",
      "options": ["circle", "square", "rounded"],
      "default": "circle"
    },
    "showEngagement": {
      "type": "boolean",
      "label": "Show Engagement Icons",
      "default": true
    },
    "engagementIconColor": {
      "type": "color",
      "label": "Engagement Icon Color",
      "default": "#6b7280",
      "showWhen": { "showEngagement": true }
    },
    "sectionPadding": {
      "type": "select",
      "label": "Section Padding",
      "options": ["normal", "large"],
      "default": "normal"
    }
  },
  
