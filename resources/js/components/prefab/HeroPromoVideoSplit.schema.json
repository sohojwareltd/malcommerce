{
  "sectionName": "HeroPromoVideoSplit",
  "sectionPurpose": "Hero section with promotional text content and embedded video, designed for course/product launches with split layout (video on right, content on left). Mobile-first: video stacks on top.",
  
  "contentSchema": {
    "headline": {
      "type": "string",
      "label": "Main Headline",
      "required": true,
      "default": ""
    },
    "subtext": {
      "type": "string",
      "label": "Subtext/Description",
      "required": false,
      "default": ""
    },
    "discountText": {
      "type": "string",
      "label": "Discount Text",
      "required": false,
      "default": ""
    },
    "primaryButtonText": {
      "type": "string",
      "label": "Primary Button Text",
      "required": false,
      "default": ""
    },
    "primaryButtonLink": {
      "type": "url",
      "label": "Primary Button Link",
      "required": false,
      "default": "#"
    },
    "secondaryButtonText": {
      "type": "string",
      "label": "Secondary Button Text",
      "required": false,
      "default": ""
    },
    "secondaryButtonLink": {
      "type": "url",
      "label": "Secondary Button Link",
      "required": false,
      "default": "#"
    },
    "videoUrl": {
      "type": "url",
      "label": "YouTube Video URL",
      "required": true,
      "default": ""
    }
  },
  
  "styleOptions": {
    "backgroundType": {
      "type": "select",
      "label": "Background Type",
      "options": ["color", "gradient", "image"],
      "default": "gradient"
    },
    "backgroundColor": {
      "type": "color",
      "label": "Background Color",
      "default": "#1e1b4b",
      "showWhen": { "backgroundType": "color" }
    },
    "gradientStart": {
      "type": "color",
      "label": "Gradient Start Color",
      "default": "#7c3aed",
      "showWhen": { "backgroundType": "gradient" }
    },
    "gradientEnd": {
      "type": "color",
      "label": "Gradient End Color",
      "default": "#000000",
      "showWhen": { "backgroundType": "gradient" }
    },
    "backgroundImage": {
      "type": "image",
      "label": "Background Image URL",
      "default": "",
      "showWhen": { "backgroundType": "image" }
    },
    "textColor": {
      "type": "color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    "headingTag": {
      "type": "select",
      "label": "Heading Tag",
      "options": ["h1", "h2", "h3", "h4"],
      "default": "h1"
    },
    "headingSize": {
      "type": "select",
      "label": "Heading Size",
      "options": ["sm", "md", "lg", "xl", "2xl", "3xl", "4xl"],
      "default": "xl"
    },
    "subtextSize": {
      "type": "select",
      "label": "Subtext Size",
      "options": ["xs", "sm", "base", "lg", "xl"],
      "default": "base"
    },
    "discountTextSize": {
      "type": "select",
      "label": "Discount Text Size",
      "options": ["sm", "base", "lg", "xl"],
      "default": "lg"
    },
    "primaryButtonBgColor": {
      "type": "color",
      "label": "Primary Button Background",
      "default": "#7c3aed"
    },
    "primaryButtonTextColor": {
      "type": "color",
      "label": "Primary Button Text",
      "default": "#ffffff"
    },
    "secondaryButtonBgColor": {
      "type": "color",
      "label": "Secondary Button Background",
      "default": "#7c3aed"
    },
    "secondaryButtonTextColor": {
      "type": "color",
      "label": "Secondary Button Text",
      "default": "#ffffff"
    },
    "alignment": {
      "type": "select",
      "label": "Text Alignment",
      "options": ["left", "center"],
