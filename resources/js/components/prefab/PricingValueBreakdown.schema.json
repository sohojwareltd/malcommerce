{
  "sectionName": "PricingValueBreakdown",
  "sectionPurpose": "Pricing/value breakdown section showing individual items with prices, total value, discount offer, and CTA button. Perfect for course bundles, product packages, or service offerings with detailed value proposition.",
  
  "contentSchema": {
    "headerTopLine": {
      "type": "string",
      "label": "Header Top Line",
      "required": false,
      "default": ""
    },
    "headerBottomLine": {
      "type": "string",
      "label": "Header Bottom Line",
      "required": false,
      "default": ""
    },
    "items": {
      "type": "array",
      "label": "Value Items",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "label": "Item Title",
            "required": true
          },
          "value": {
            "type": "string",
            "label": "Item Value (in Taka)",
            "required": true,
            "description": "Price in Taka format (e.g., '২৫০০ টাকা')"
          }
        }
      },
      "default": []
    },
    "totalValue": {
      "type": "string",
      "label": "Total Value",
      "required": false,
      "default": "",
      "description": "Manual entry for total value (e.g., 'সর্বমোট ৩৯,০০০ টাকা সমমূল্যের ভ্যালু')"
    },
    "discountText": {
      "type": "string",
      "label": "Discount Text",
      "required": false,
      "default": "",
      "description": "Discount offer text (e.g., 'প্রথম ১০০ জন পাচ্ছেন ৯০% ছাড়ে')"
    },
    "ctaButtonText": {
      "type": "string",
      "label": "CTA Button Text",
      "required": false,
      "default": ""
    },
    "ctaButtonLink": {
      "type": "url",
      "label": "CTA Button Link",
      "required": false,
      "default": "#"
    }
  },
  
  "styleOptions": {
    "headerBgType": {
      "type": "select",
      "label": "Header Background Type",
      "options": ["gradient", "solid"],
      "default": "gradient"
    },
    "headerGradientStart": {
      "type": "color",
      "label": "Header Gradient Start Color",
      "default": "#7c3aed",
      "showWhen": { "headerBgType": "gradient" }
    },
    "headerGradientEnd": {
      "type": "color",
      "label": "Header Gradient End Color",
      "default": "#4c1d95",
      "showWhen": { "headerBgType": "gradient" }
    },
    "headerBgColor": {
      "type": "color",
      "label": "Header Background Color",
      "default": "#7c3aed",
      "showWhen": { "headerBgType": "solid" }
    },
    "headerTopLineColor": {
      "type": "color",
      "label": "Header Top Line Color",
      "default": "#ffffff"
    },
    "headerTopLineSize": {
      "type": "select",
      "label": "Header Top Line Size",
      "options": ["lg", "xl", "2xl", "3xl"],
      "default": "xl"
    },
    "headerBottomLineColor": {
      "type": "color",
      "label": "Header Bottom Line Color",
      "default": "#c4b5fd"
    },
    "headerBottomLineSize": {
      "type": "select",
      "label": "Header Bottom Line Size",
      "options": ["base", "lg", "xl"],
      "default": "lg"
    },
    "itemTitleColor": {
      "type": "color",
      "label": "Item Title Color",
      "default": "#1f2937"
    },
    "itemTitleSize": {
      "type": "select",
      "label": "Item Title Size",
      "options": ["sm", "base", "lg"],
      "default": "base"
    },
    "itemValueColor": {
      "type": "color",
      "label": "Item Value Color",
      "default": "#1f2937"
    },
    "itemValueSize": {
      "type": "select",
      "label": "Item Value Size",
      "options": ["sm", "base", "lg"],
      "default": "base"
    },
    "itemBorderColor": {
      "type": "color",
      "label": "Item Border Color",
      "default": "#e5e7eb"
    },
    "itemSpacing": {
      "type": "select",
      "label": "Item Spacing",
      "options": ["normal", "large"],
      "default": "normal"
    },
    "totalValueColor": {
      "type": "color",
      "label": "Total Value Color",
      "default": "#dc2626"
    },
    "totalValueSize": {
      "type": "select",
      "label": "Total Value Size",
      "options": ["lg", "xl", "2xl", "3xl"],
      "default": "xl"
    },
    "totalValueWeight": {
      "type": "select",
      "label": "Total Value Font Weight",
      "options": ["semibold", "bold"],
      "default": "bold"
    },
    "discountTextColor": {
      "type": "color",
      "label": "Discount Text Color",
      "default": "#374151"
    },
    "discountTextSize": {
      "type": "select",
      "label": "Discount Text Size",
      "options": ["xs", "sm", "base"],
      "default": "sm"
    },
    "buttonBgColor": {
      "type": "color",
      "label": "Button Background Color",
      "default": "#7c3aed"
    },
    "buttonTextColor": {
      "type": "color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    "buttonSize": {
      "type": "select",
      "label": "Button Size",
      "options": ["medium", "large", "xl"],
      "default": "large"
    },
    "buttonFullWidth": {
      "type": "boolean",
      "label": "Button Full Width",
      "default": true
    },
    "sectionPadding": {
      "type": "select",
      "label": "Section Padding",
      "options": ["normal", "large"],
      "default": "normal"
    },
    "backgroundColor": {
      "type": "color",
      "label": "Section Background Color",
      "default": "#ffffff"
    }
  },
  
